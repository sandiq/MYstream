  <script>
    // Mobile menu toggle
    const mobileToggle = document.querySelector('.mobile-toggle');
    const navLinks = document.querySelector('.nav-links');
    let navOpen = false;
    
    if (mobileToggle) {
        mobileToggle.addEventListener('click', () => {
            navOpen = !navOpen;
            navLinks.style.display = navOpen ? 'flex' : 'none';
            navLinks.style.flexDirection = 'column';
            navLinks.style.position = 'absolute';
            navLinks.style.top = '70px';
            navLinks.style.right = '20px';
            navLinks.style.background = 'rgba(0,0,0,0.6)';
            navLinks.style.padding = '12px 18px';
            navLinks.style.borderRadius = '10px';
            navLinks.style.backdropFilter = 'blur(8px)';
            navLinks.style.zIndex = '1000';
        });
    }

    // Initialize Swiper with proper configuration
    const swiper = new Swiper('.hero.swiper', {
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
        pauseOnMouseEnter: true
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        renderBullet: function (index, className) {
          return '<span class="' + className + '"></span>';
        }
      },
      navigation: {
        nextEl: '.nextHero',
        prevEl: '.prevHero'
      },
      on: {
        init: function () {
          // Add active class to first dot
          const bullets = document.querySelectorAll('.swiper-pagination-bullet');
          if (bullets.length > 0) {
            bullets[0].classList.add('active');
          }
        },
        slideChange: function () {
          // Update active dot
          const bullets = document.querySelectorAll('.swiper-pagination-bullet');
          bullets.forEach((bullet, index) => {
            bullet.classList.toggle('active', index === this.activeIndex);
          });
        }
      }
    });

    // Modal functionality
    const modal = document.getElementById('modal');
    const modalContent = document.getElementById('modalContent');
    const closeModalBtn = document.getElementById('closeModal');

    function openModal(item) {
        if (!item) return;
        
        modalContent.innerHTML = `
          <div style="display:flex;gap:16px;align-items:flex-start">
            <img src="${item.poster}" alt="poster" style="width:100px;border-radius:8px;flex-shrink:0">
            <div>
              <h2 style="margin:0 0 8px">${item.title} 
                <span style='color:var(--muted);font-weight:600'>(${item.year})</span>
              </h2>
      
              <div style="color:var(--muted);margin-bottom:12px">${item.tagline}</div>
              <p style="color:var(--muted);margin-top:0">${item.desc}</p>
      
              <div style="margin-top:12px;display:flex;gap:8px">
                <a href="/watch/${item.type}/${item.id}/1/1" class="btn" style="text-decoration: none;">▶ Play</a>
              </div>
            </div>
          </div>
        `;
    
      modal.classList.add('open');
      modal.setAttribute('aria-hidden','false');
    }

    // Close modal
    function closeModal() {
      modal.classList.remove('open');
      modal.setAttribute('aria-hidden','true');
    }

    closeModalBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Event delegation for hero buttons and cards
    document.addEventListener('click', (e) => {
      const btn = e.target.closest('button[data-action="details"]');
      const card = e.target.closest('.card');
      
      let item = null;
      
      if (btn) {
        const id = btn.dataset.id;
        const slide = document.querySelector(`.hero__slide[data-id="${id}"]`);
        if (slide) {
          item = {
            id,
            title: slide.dataset.title,
            year: slide.dataset.year,
            tagline: slide.dataset.tagline,
            desc: slide.dataset.desc,
            poster: slide.dataset.poster,
            type: slide.dataset.type || 'movie',
          };
        }
      } else if (card) {
        const id = card.dataset.id;
        item = {
          id,
          title: card.dataset.title,
          year: card.dataset.year,
          tagline: card.dataset.tagline,
          desc: card.dataset.desc,
          poster: card.dataset.poster,
          type: card.dataset.type || 'movie',
        };
      }
      
      if (item) {
        openModal(item);
      }
    });

    // Search functionality
    const searchInput = document.getElementById('search');
    if (searchInput) {
      searchInput.addEventListener('input', () => {
        const query = searchInput.value.toLowerCase().trim();
        const rows = ['row-sliders', 'row-new', 'row-movie', 'row-tv', 'row-populate'];
        
        rows.forEach(rowId => {
          const container = document.getElementById(rowId);
          if (container) {
            Array.from(container.children).forEach(card => {
              const title = card.querySelector('.meta div')?.textContent.toLowerCase() || '';
              card.style.display = title.includes(query) ? '' : 'none';
            });
          }
        });
      });
    }

    // Small accessibility: focus outline
    document.addEventListener('keyup', (e) => {
      if (e.key === 'Tab') {
        document.body.classList.add('show-focus');
      }
    });

    // Add keyboard navigation for carousel
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        swiper.slidePrev();
      } else if (e.key === 'ArrowRight') {
        swiper.slideNext();
      }
    });
    
    document.getElementById('btnSearch').addEventListener('click', () => {
      const query = searchInput.value.toLowerCase().trim();
      window.location.href = "/film/search?query="+query
    })
  </script>
</body>
