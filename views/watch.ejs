    <title>MYstream — <%= streamData?.title || streamData?.name %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        :root {
            --primary-color: #00d4ff;
            --secondary-color: #ff00ff;
            --dark-bg: #0a0a0f;
            --darker-bg: #05050a;
            --card-bg: #141422;
            --text-primary: #ffffff;
            --text-secondary: #b8b8c8;
            --accent-glow: rgba(0, 212, 255, 0.3);
            --gradient-1: linear-gradient(135deg, #00d4ff, #ff00ff);
            --gradient-2: linear-gradient(135deg, #ff00ff, #00d4ff);
            --success-color: #00ff88;
            --warning-color: #ffaa00;
            --error-color: #ff4444;
        }

        body {
            background: var(--dark-bg);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
            font-size: 16px;
        }

        /* Animated Background */
        .animated-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--dark-bg);
            z-index: -1;
            overflow: hidden;
        }

        .animated-bg::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgba(0, 212, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 0, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(0, 212, 255, 0.05) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            33% { transform: translate(-30px, -30px) rotate(120deg); }
            66% { transform: translate(30px, -20px) rotate(240deg); }
        }

        /* Header */
        .header {
            background: rgba(10, 10, 15, 0.8);
            backdrop-filter: blur(10px);
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(0, 212, 255, 0.2);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-links {
            display: none; /* Hide on mobile by default */
        }

        .nav-links a {
            color: var(--text-secondary);
            text-decoration: none;
            transition: color 0.3s;
            position: relative;
        }

        .nav-links a:hover {
            color: var(--primary-color);
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--gradient-1);
            transition: width 0.3s;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        /* Main Container */
        .main-container {
            max-width: 100%;
            margin: 1rem auto;
            padding: 0 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        /* Video Player */
        .video-player {
            background: var(--card-bg);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            position: relative;
            width: 100%;
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        .video-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent 60%, rgba(0, 0, 0, 0.8));
            pointer-events: none;
        }

        /* Video Info */
        .video-info {
            padding: 1rem;
        }

        .video-title {
            font-size: 1.4rem;
            margin-bottom: 0.8rem;
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .video-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 0.8rem;
            flex-wrap: wrap;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        /* Controls */
        .video-controls {
            display: flex;
            gap: 0.8rem;
            margin-top: 0.8rem;
            flex-wrap: wrap;
        }

        .control-btn {
            background: rgba(20, 20, 34, 0.6);
            border: 1px solid rgba(0, 212, 255, 0.3);
            color: var(--text-primary);
            padding: 0.6rem 1rem;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .control-btn:hover {
            background: rgba(0, 212, 255, 0.2);
            border-color: var(--primary-color);
            transform: translateY(-2px);
        }

        /* Server Selector - Futuristic Style */
        .server-selector {
            margin-top: 1rem;
            padding: 1rem;
            background: rgba(20, 20, 34, 0.4);
            border-radius: 12px;
            border: 1px solid rgba(0, 212, 255, 0.2);
        }

        .server-title {
            font-size: 0.9rem;
            color: var(--primary-color);
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .server-options {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .server-option {
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(20, 20, 34, 0.6);
            border: 1px solid rgba(0, 212, 255, 0.3);
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .server-option:hover {
            background: rgba(0, 212, 255, 0.1);
            border-color: var(--primary-color);
            transform: translateY(-2px);
        }

        .server-option.active {
            background: var(--gradient-1);
            border-color: transparent;
            box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
        }

        .server-option input[type="radio"] {
            display: none;
        }

        .server-option .radio-custom {
            position: relative;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 2px solid rgba(0, 212, 255, 0.5);
            transition: all 0.3s;
        }

        .server-option.active .radio-custom {
            border-color: white;
            box-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
        }

        .server-option.active .radio-custom::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            background: white;
            border-radius: 50%;
            opacity: 1;
            transition: all 0.3s;
        }

        .server-option .server-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            transition: color 0.3s;
        }

        .server-option.active .server-label {
            color: white;
        }

        .server-option .server-quality {
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 212, 255, 0.2);
            color: var(--primary-color);
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.75rem;
        }

        /* Sidebar - Mobile Layout */
        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            width: 100%;
        }

        .season-selector {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .season-title {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            color: var(--primary-color);
        }

        .season-tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 0.8rem;
            flex-wrap: wrap;
        }

        .season-tab {
            padding: 0.5rem 0.8rem;
            background: rgba(20, 20, 34, 0.6);
            border: 1px solid rgba(0, 212, 255, 0.3);
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        .season-tab.active {
            background: var(--gradient-1);
            color: white;
            border-color: transparent;
        }

        .season-tab:hover:not(.active) {
            background: rgba(0, 212, 255, 0.2);
            color: var(--primary-color);
        }

        .episodes-list {
            display: flex;
            flex-direction: column;
            gap: 0.6rem;
            max-height: 300px;
            overflow-y: auto;
            padding-right: 0.5rem;
        }

        .episodes-list::-webkit-scrollbar {
            width: 6px;
        }

        .episodes-list::-webkit-scrollbar-track {
            background: rgba(20, 20, 34, 0.3);
            border-radius: 3px;
        }

        .episodes-list::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 3px;
        }

        .episode-item {
            background: rgba(20, 20, 34, 0.6);
            border: 1px solid rgba(0, 212, 255, 0.2);
            border-radius: 10px;
            padding: 0.8rem;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .episode-item:hover {
            background: rgba(0, 212, 255, 0.1);
            border-color: var(--primary-color);
            transform: translateX(5px);
        }

        .episode-item.active {
            background: var(--gradient-1);
            border-color: transparent;
            box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
        }

        .episode-number {
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            min-width: 30px;
            font-size: 0.9rem;
        }

        .episode-title {
            flex: 1;
            font-size: 0.95rem;
        }

        .episode-duration {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        /* Info Panel */
        .info-panel {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .info-title {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            color: var(--primary-color);
        }

        .info-content {
            color: var(--text-secondary);
            line-height: 1.6;
            font-size: 0.95rem;
        }

        /* Rows */
        .row {
            margin-top: 28px;
        }

        .row h3 {
            margin: 0 0 12px 12px;
            font-size: 18px;
            color: var(--text-primary);
        }

        .row__list {
            display: flex;
            gap: 12px;
            overflow: auto;
            padding: 12px;
            border-radius: 12px;
        }

        .card {
            min-width: 160px;
            flex: 0 0 auto;
            border-radius: 10px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(0, 0, 0, 0.08));
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: transform .25s ease, box-shadow .25s ease;
        }

        .card img {
            display: block;
            width: 100%;
            height: 240px;
            object-fit: cover;
        }

        .card .meta {
            padding: 10px;
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.6);
        }

        .scroller-controls {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .btn {
            background: rgba(255, 255, 255, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.03);
            padding: 8px 12px;
            border-radius: 10px;
            color: var(--text-secondary);
            cursor: pointer;
        }

        /* Modal */
        .modal {
            position: fixed;
            inset: 0;
            background: rgba(2, 6, 12, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 60;
            opacity: 0;
            pointer-events: none;
            transition: opacity .2s;
        }

        .modal.open {
            opacity: 1;
            pointer-events: auto;
        }

        .modal__box {
            width: min(900px, 95%);
            background: linear-gradient(180deg, rgba(10, 26, 44, 0.9), rgba(4, 10, 20, 0.95));
            padding: 18px;
            border-radius: 14px;
        }

        .modal__close {
            position: absolute;
            right: 22px;
            top: 18px;
            background: transparent;
            border: 0;
            color: var(--text-secondary);
            font-size: 20px;
        }

        footer {
            margin: 40px 0 80px;
            color: var(--text-secondary);
            font-size: 13px;
            text-align: center;
        }

        /* Responsive */
        @media (min-width: 768px) {
            .main-container {
                grid-template-columns: 1fr 350px;
                display: grid;
                gap: 2rem;
                padding: 0 2rem;
            }

            .nav-links {
                display: flex;
            }

            .video-title {
                font-size: 1.8rem;
            }

            .video-meta {
                gap: 2rem;
            }

            .control-btn {
                font-size: 1rem;
                padding: 0.5rem 1rem;
            }

            .season-title {
                font-size: 1.2rem;
            }

            .season-tab {
                font-size: 1rem;
                padding: 0.5rem 1rem;
            }

            .episode-title {
                font-size: 1rem;
            }

            .info-title {
                font-size: 1.2rem;
            }

            .info-content {
                font-size: 1rem;
            }
        }

        @media (max-width: 1024px) {
            .main-container {
                max-width: 1400px;
                margin: 2rem auto;
            }
        }

        @media (max-width: 800px) {
            nav {
                display: none;
            }

            .mobile-toggle {
                display: block;
            }

            .hero__slide {
                grid-template-columns: 1fr;
                padding: 18px;
                grid-auto-rows: auto;
            }

            .hero__poster {
                display: none;
            }

            .title {
                font-size: 22px;
            }

            .desc {
                max-width: 100%;
            }

            .card img {
                height: 150px;
            }

            .row__list {
                padding: 8px;
            }
        }

        @media (max-width: 480px) {
            .card {
                min-width: 130px;
            }

            .site {
                padding: 12px;
            }
        }

        .flex {
            display: flex;
            align-items: center;
        }

        .space {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="animated-bg"></div>
    
    <header class="header">
        <div class="logo">
            <i class="fas fa-play-circle"></i>
            MYstream
        </div>
        <div class="menu-toggle">
            <a href="/" style="text-decoration:none;color: var(--text-primary)"><i class="fas fa-arrow-left"> Back</i></a>
        </div>
    </header>

    <main class="main-container">
        <div class="video-player"
        data-id="<%= streamData.id %>"
        data-title="<%= streamData.title || streamData.name %>"
        data-dec="<%= streamData.overview %>"
        data-year="<%= streamData.release_date || streamData.first_air_date %>"
        data-type="<%= type_media %>"
        >
            <div class="video-container">
                <iframe id="videoFrame" src="<%= url.vidplus %>" frameborder="0" allow="" allowfullscreen></iframe>
                <div class="video-overlay"></div>
            </div>
            <div class="video-info">
                <h1 class="video-title" id="videoTitle"><%= streamData.title || streamData.name %></h1>
                <div class="video-meta">
                    <div class="meta-item">
                        <i class="fas fa-calendar"></i>
                        <span><%= streamData.release_date || streamData.first_air_date %></span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-star"></i>
                        <span><%= streamData.vote_average %></span>
                    </div>
                </div>
                <div class="video-controls">
                    <button class="control-btn" id="prevBtn">
                        <i class="fas fa-backward"></i>
                    </button>
                    <button class="control-btn" id="playBtn">
                        <i class="fas fa-play"></i>
                    </button>
                    <button class="control-btn" id="nextBtn">
                        <i class="fas fa-forward"></i>
                    </button>
                </div>
                <div class="server-selector">
                    <div class="server-title">
                        <i class="fas fa-server"></i>
                        Pilih Server
                    </div>
                    <div class="server-options">
                        <label class="server-option active" for="server-1">
                            <span class="radio-custom"></span>
                            <span class="server-label">Server 1</span>
                        </label>
                        <label class="server-option" for="server-2">
                            <span class="radio-custom"></span>
                            <span class="server-label">Server 2</span>
                        </label>
                        <label class="server-option" for="server-3">
                            <span class="radio-custom"></span>
                            <span class="server-label">Server 3</span>
                        </label>
                        <label class="server-option" for="server-4">
                            <span class="radio-custom"></span>
                            <span class="server-label">Server 4</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidebar">
            <div class="info-panel">
                <h3 class="info-title">Informasi</h3>
                <div class="info-content">
                    <p><%= streamData.overview %></p>
                    <br>
                    <p><strong>Pemeran:</strong> <%= streamData.credits.cast.map(v=>v.name).join(' ,') %></p>
                    <p><strong>Genre:</strong> <%= streamData.genres.map(v => v.name).join(', ') %></p>
                </div>
            </div>
            <% if (streamData?.seasons) { %>
            <div class="season-selector">
                <h3 class="season-title">Pilih Musim</h3>
                <div class="season-tabs" id="seasonTabs">
                    <% for (let i=1; i <= streamData?.seasons?.length; i++) { %>
                        <div class="season-tab <%= i==1 ? 'active':''%>" data-season="<%= i %>">
                            <%= 'Season '+i %>
                        </div>
                    <% } %>
                </div>
                <div class="episodes-list" id="episodesList">
                    <% for (let i=1; i <= streamData?.seasons?.length; i++) { %>
                        <% for (let e=1;e<=streamData.seasons[i-1].episode_count; e++) { %>
                            <div class="episode-item <%= e == 1 ? 'active':'' %>" data-episode="<%= e %>" data-season="<%= i %>">
                                <div class="episode-number">E<%= e %></div>
                                <div class="episode-title"><%= streamData.seasons[i-1].episodes?.find(ep => ep.episode_number === e)?.name || 'Episode ' + e %></div>
                                <div class="episode-duration"><%= streamData.seasons[i-1].episodes?.find(ep => ep.episode_number === e)?.runtime || 'N/A' %> menit</div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <footer>
      © <strong>MYstream</strong> — All rights reserved. 
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get DOM elements
            const seasonTabs = document.getElementById('seasonTabs');
            const episodesList = document.getElementById('episodesList');
            const playBtn = document.getElementById('playBtn');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const videoFrame = document.getElementById('videoFrame');
            const videoTitle = document.getElementById('videoTitle');
            const videoPlayer = document.querySelector('.video-player');
            const serverOptions = document.querySelectorAll('.server-option');
            
            let currentSeason = 1;
            let currentEpisode = 1;
            let isPlaying = false;
            let currentServer = 1;
            
            // Server URLs configuration
            const serverUrls = {
                1: {
                    base: 'https://player.vidplus.to/embed/'
                },
                2: {
                    base: 'https://player.videasy.net/'
                },
                3: {
                    base: 'https://vidrock.net/'
                },
                4: {
                    base: 'https://vidsrc-embed.ru/embed/'
                },
            };
            
            // Season selection functionality
            if (seasonTabs) {
                seasonTabs.addEventListener('click', function(e) {
                    if (e.target.classList.contains('season-tab')) {
                        // Remove active class from all tabs
                        document.querySelectorAll('.season-tab').forEach(tab => {
                            tab.classList.remove('active');
                        });
                        
                        // Add active class to clicked tab
                        e.target.classList.add('active');
                        
                        // Update current season
                        currentSeason = parseInt(e.target.dataset.season);
                        
                        // Update episodes list
                        updateEpisodesList(currentSeason);
                    }
                });
            }
            
            // Update episodes list based on selected season
            function updateEpisodesList(season) {
                const episodes = document.querySelectorAll('.episode-item');
                episodes.forEach((episode, index) => {
                    const episodeSeason = parseInt(episode.dataset.season);
                    if (episodeSeason === season) {
                        episode.style.display = 'flex';
                    } else {
                        episode.style.display = 'none';
                    }
                });
                
                // Reset to first episode of selected season
                const firstEpisode = document.querySelector(`.episode-item[data-season="${season}"]:first-child`);
                if (firstEpisode) {
                    firstEpisode.classList.add('active');
                    currentEpisode = parseInt(firstEpisode.dataset.episode);
                    updateVideoPlayer();
                }
            }
            
            // Episode click handler
            episodesList?.addEventListener('click', function(e) {
                const episodeItem = e.target.closest('.episode-item');
                if (episodeItem) {
                    // Remove active class from all episodes
                    document.querySelectorAll('.episode-item').forEach(ep => {
                        ep.classList.remove('active');
                    });
                    
                    // Add active class to clicked episode
                    episodeItem.classList.add('active');
                    
                    // Update current episode
                    currentEpisode = parseInt(episodeItem.dataset.episode);
                    currentSeason = parseInt(episodeItem.dataset.season);
                    
                    // Update video player
                    updateVideoPlayer();
                }
            });
            
            // Server selection functionality
            serverOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove active class from all server options
                    serverOptions.forEach(opt => {
                        opt.classList.remove('active');
                    });
                    
                    // Add active class to clicked option
                    this.classList.add('active');
                    
                    // Update current server
                    currentServer = parseInt(this.getAttribute('for').split('-')[1]);
                    
                    // Update video player
                    updateVideoPlayer();
                });
            });
            
            // Update video player based on current season, episode, and server
            function updateVideoPlayer() {
                const streamData = {
                    id: videoPlayer.dataset.id,
                    title: videoPlayer.dataset.title,
                    dec: videoPlayer.dataset.dec,
                    year: videoPlayer.dataset.year,
                    type: videoPlayer.dataset.type
                };
                
                // Update video title
                videoTitle.textContent = streamData.title;
                
                // Get current server configuration
                const serverConfig = serverUrls[currentServer];
                
                // Update iframe source with new season, episode, and server
                const videoId = streamData.id;
                const TypeMed = streamData.type;
                const seasonNumber = currentSeason || 1;
                const episodeNumber = currentEpisode || 1;
                
                // Build the URL with server selection
                const videoUrl = `${serverConfig.base}${TypeMed}/${videoId}/${seasonNumber||1}/${episodeNumber||1}`;
                
                // Update iframe source
                videoFrame.src = videoUrl;
                
                // You can add more logic here to fetch actual video data from your API
                console.log(`Playing: ${videoUrl}`);
            }
            
            // Play/Pause button functionality
            playBtn.addEventListener('click', function() {
                isPlaying = !isPlaying;
                const icon = this.querySelector('i');
                
                if (isPlaying) {
                    icon.classList.remove('fa-play');
                    icon.classList.add('fa-pause');
                    // Add logic to actually play the video
                    videoFrame.contentWindow.postMessage({ action: 'play' }, '*');
                } else {
                    icon.classList.remove('fa-pause');
                    icon.classList.add('fa-play');
                    // Add logic to pause the video
                    videoFrame.contentWindow.postMessage({ action: 'pause' }, '*');
                }
            });
            
            // Previous button functionality
            prevBtn.addEventListener('click', function() {
                if (currentEpisode > 1) {
                    currentEpisode--;
                } else if (currentSeason > 1) {
                    currentSeason--;
                    currentEpisode = streamData.seasons[currentSeason - 1].episode_count;
                }
                
                // Update UI
                const prevEpisode = document.querySelector(`.episode-item[data-season="${currentSeason}"][data-episode="${currentEpisode}"]`);
                if (prevEpisode) {
                    document.querySelectorAll('.episode-item').forEach(ep => ep.classList.remove('active'));
                    prevEpisode.classList.add('active');
                    updateVideoPlayer();
                }
            });
            
            // Next button functionality
            nextBtn.addEventListener('click', function() {
                const currentSeasonData = streamData.seasons[currentSeason - 1];
                if (currentEpisode < currentSeasonData.episode_count) {
                    currentEpisode++;
                } else if (currentSeason < streamData.seasons.length) {
                    currentSeason++;
                    currentEpisode = 1;
                }
                
                // Update UI
                const nextEpisode = document.querySelector(`.episode-item[data-season="${currentSeason}"][data-episode="${currentEpisode}"]`);
                if (nextEpisode) {
                    document.querySelectorAll('.episode-item').forEach(ep => ep.classList.remove('active'));
                    nextEpisode.classList.add('active');
                    updateVideoPlayer();
                }
            });
            
            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
                
                switch(e.key) {
                    case ' ':
                        e.preventDefault();
                        playBtn.click();
                        break;
                    case 'ArrowLeft':
                        prevBtn.click();
                        break;
                    case 'ArrowRight':
                        nextBtn.click();
                        break;
                    case 'ArrowUp':
                        // Scroll up in episodes list
                        episodesList.scrollTop -= 50;
                        break;
                    case 'ArrowDown':
                        // Scroll down in episodes list
                        episodesList.scrollTop += 50;
                        break;
                }
            });
            
            // Add smooth scroll behavior
            episodesList.style.scrollBehavior = 'smooth';
        });
    </script>
</body>
</html>